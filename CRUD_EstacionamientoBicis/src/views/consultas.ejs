<% include partes/cabecera%>

    <div class="container">
      <div class="row mt-5">
        <div class="col-md-7">

          <label>Ingrese letra nombre </label>
            <input type="text" id="busqueda" />
            <button onclick="buscar()">Buscar Apellido</button>

          <table class="table table-bordered">
            <thead> <!--  cabecera -->
              <!--fila  -->
              <tr>
                <!-- atributos o cabeceras -->
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Web</th>
                <th>Longitud</th>
                <th>Latitud</th>
                <th>Ubicacion</th>
                <th>Puestos de interior</th>
                <th>Puestos de exterior</th>
              </tr>
            </thead>
            <!-- cuerpo -->
            <tbody>
              <% if(data){ %>
                 <% for(var i = 0;i < data.length;i++) { %>
                   <tr>
                     <td><%= data[i].Id %></td>
                     <td><%= data[i].nombre %></td>
                     <td><%= data[i].Direccion %></td>
                     <td><%= data[i].Web %></td>
                     <td><%= data[i].Longitud %></td>
                     <td><%= data[i].Latitud %></td>
                     <td><%= data[i].ubicacion %></td>
                     <td><%= data[i].Puestos_interior %></td>
                     <td><%= data[i].Puestos_exterior %></td>
                     <td><a href="/editar/<%= data[i].Id %>" class="btn btn-info">Actualizar</a></td>
                     <td> <a href="/borrar/<%= data[i].Id %>" class="btn btn-danger">Borrar</a>
                   </tr>
                   <% } %>
              <% } %>

            </tbody>

          </table>
        </div>
      </div>
    </div>
<% include  partes/pie %>
