<% include partes/cabecera%>
 
    <div class="container">

      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <input id="txtSummoner" type="text" class="form-control" placeholder="<<Introduce un nombre a buscar>>">
        </div>
      <div class="col-md-1">
        <button id="buscar" type="button" class="btn btn-primary">
        <a href="/consultas" class=""> Consultar</a></button>
      </div>


      </div>
      <!-- tabla info -->
      <div class="row mt-3">
        <div class="col-8">

                  <div class="col-md-5">
            <div class="card">
              <div class="card-header">Registro de Datos: Estacionamientos</div>
                <div class="card-body">
                  <form class="" action="/Insertar" method="POST">
                    <div class="form-group">
                      <label for="">ID</label>
                      <input type="number" name="Id" value="" class="form-control">
                      <label for="">Nombre</label>
                      <input type="text" name="Nombre" value="" class="form-control">
                      <label for="">Direccion</label>
                      <input type="text" name="Direccion" value="" class="form-control">
                      <label for="">Web</label>
                      <input type="text" name="web" value="" class="form-control">
                      <label for="">Longitud</label>
                      <input type="text" name="Longitud" value="" class="form-control">
                      <label for="">Latitud</label>
                      <input type="text" name="Latitud" value="" class="form-control">
                      <label for="">Ubicacion</label>
                      <input type="text" name="ubicacion" value="" class="form-control">
                      <label for="">Puestos de interior</label>
                      <input type="text" name="Puestos_interior" value="" class="form-control">
                      <label for="">Puestos de exterior</label>
                      <input type="text" name="Puestos_exterior" value="" class="form-control"></div>
                    <div class="">
                      <input type="submit" value="Insertar" class="btn btn-primary btn-block">
                    </div> 
                  </form><br>
                </div>
            </div>
        </div>



          <table class="table table-bordered table-hover">
            <thead> <!--  cabecera -->
              <!--fila  --><br>
              <tr>
                <!-- atributos o cabeceras -->
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Web</th>
                <th>Longitud</th>
                <th>Latitud</th>
                <th>Ubicacion</th>
                <th>Puestos de interior</th>
                <th>Puestos de exterior</th>
              </tr>
            </thead>
            <!-- cuerpo -->
            <tbody>
              <% if(data) { %>
                 <% for(var i = 0;i < data.length;i++) { %>
                   <tr>
                     <td><%= data[i].Id %></td>
                     <td><%= data[i].Nombre %></td>
                     <td><%= data[i].Direccion %></td>
                     <td><%= data[i].Web %></td>
                     <td><%= data[i].Longitud %></td>
                     <td><%= data[i].Latitud %></td>
                     <td><%= data[i].ubicacion %></td>
                     <td><%= data[i].Puestos_interior %></td>
                     <td><%= data[i].Puestos_exterior %></td>
                     <td><a href="/editar/<%= data[i].Id %>" class="btn btn-info">Actualizar</a></td>
                     <td> <a href="/borrar/<%= data[i].Id %>" class="btn btn-danger">Borrar</a>
                   </tr>
                   <% } %>
              <% } %>

            </tbody>
          </table>
        </div>


      </div>
    </div>
